{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://example.com/example.json",
    "type": "object",
    "title": "The root schema",
    "description": "The root schema comprises the entire JSON document.",
   
    
    "required": [
        "payer_id",
        "payerName",
        "payment_type",
        "payerAccountNumber"
    ],
    "properties": {
        "payer_id": {
            "$id": "#/properties/payer_id",
            "type": "integer"
            
      },
        "payerName": {
            "$id": "#/properties/payerName",
            "type": "string"
           
       },
        "payment_type": {
            "$id": "#/properties/payment_type",
            "type": "string"
            
           
      },
        "payerAccountNumber": {
            "$id": "#/properties/payerAccountNumber",
            "type": "integer"
           
       }
    },
    "additionalProperties": true
}